# ---------- build stage ----------
FROM node:20-alpine AS build
WORKDIR /app

# Install deps (locked)
COPY package*.json ./
RUN npm ci

# Copy source & tsconfig and build
COPY tsconfig*.json ./
COPY src ./src
RUN npx tsc

# ---------- runtime stage ----------
FROM node:20-alpine
WORKDIR /app

# Only prod deps
COPY package*.json ./
RUN npm ci --omit=dev

# Copy compiled JS
COPY --from=build /app/dist ./dist

# Helpful defaults
ENV TZ=UTC NODE_ENV=production

CMD ["node", "dist/index.js"]
