// /firebase/functions/tsconfig.json
{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "lib": ["ES2020"],
    "moduleResolution": "Node",
    "baseUrl": ".", 
    "paths": {
      "@shared/*": ["../../shared/*"]
    },
    "outDir": "lib",
    "rootDir": "../..",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [
    "../../shared/**/*.ts",
    "src/**/*.ts",
    "src/runPresetScansFromBuffer.ts"
  ],
  "exclude": [
    "node_modules",
    "lib"
  ]
}
