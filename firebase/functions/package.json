{
  "name": "functions",
  "main": "lib/firebase/functions/src/index.js",
  "type": "module",
  "engines": {
    "node": "20"
  },
  "private": true,
  "scripts": {
    "clean": "rimraf lib",
    "build": "tsc",
    "lint": "eslint --ext .js,.ts .",
    "serve": "firebase emulators:start --only functions",
    "shell": "firebase functions:shell",
    "start": "npm run shell",
    "deploy": "npm install --legacy-peer-deps && npm run build && firebase deploy --only functions",
    "logs": "firebase functions:log",
    "debug:indicators": "ts-node --project tsconfig.dev.json src/dev/testIndicatorDebug.ts"
  },
  "dependencies": {
    "@google-cloud/storage": "^7.16.0",
    "express": "^4.18.2",
    "firebase-admin": "^12.4.0",
    "firebase-functions": "^4.4.1",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/node": "^20.11.30",
    "dotenv": "^17.2.1",
    "rimraf": "^5.0.0",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.2.2"
  }
}
